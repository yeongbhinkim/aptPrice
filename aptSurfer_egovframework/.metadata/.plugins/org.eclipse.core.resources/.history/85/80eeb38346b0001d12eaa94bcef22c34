package egovframework.aptSurfer.common.controller;


import java.util.List;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.dbvalley.premier.scm1.rgstBarco.service.RgstBarcoService;

import net.sf.json.JSONObject;
/** 
 * @Class Name : com.dbvalley.premier.scm1.rgstBarco.controller.java 
 * @Description : PREMIER_QMS 분석의뢰
 * @Modification Information
 * @
 * @  수정일             수정자              수정내용
 * @ ----------   ---------   -------------------------------
 * @ 2021.10.12    디비밸리       	  최초생성           
 *
 * @author 디비밸리 
 * @since 2021.11.19
 * @version 1.0.0
 * @see
 *
 *  copyright (c) dbvalley.inc All rights reserved.
 */
@Controller
@RequestMapping("/rgstBarco")
public class RgstBarcoController {

	@Autowired
	private RgstBarcoService rgstBarcoService;

	/**
	 * 수입검사 요청 화면
	 * 
	 * @param request
	 * @param model
	 * @return
	 * @throws Exception
	 */
	@RequestMapping("/rgstBarcoView")
	public String rgstBarcoView(HttpServletRequest request, ModelMap model) throws Exception {

		return rgstBarcoService.rgstBarcoView(request, model);
	}

	/**
	 * 수입검사 요청 팝업
	 * 
	 * @param request
	 * @param model
	 * @return
	 * @throws Exception
	 */
	@RequestMapping("/popupRgstBarcoView")
	public String popupRgstBarcoView(HttpServletRequest request, ModelMap model) throws Exception {

		return rgstBarcoService.popupRgstBarcoView(request, model);
	}

	/**
	 * 수입검사 요청 목록 조회
	 * 
	 * @param param
	 * @return
	 * @throws Exception
	 */
	@RequestMapping("/getRgstBarcoList")
	@ResponseBody
	public List<JSONObject> getRgstBarcoList(@RequestBody JSONObject param) throws Exception {

		return rgstBarcoService.getRgstBarcoList(param);
	}

	/**
	 * 수입검사 요청 정보 조회
	 * 
	 * @param param
	 * @return
	 * @throws Exception
	 */
	@RequestMapping("/getRgstBarcoInfo")
	@ResponseBody
	public JSONObject getRgstBarcoInfo(@RequestBody JSONObject param) throws Exception {

		return rgstBarcoService.getRgstBarcoInfo(param);
	}

	/**
	 * 수입검사 요청 저장
	 * 
	 * @param param
	 * @throws Exception
	 */
	@RequestMapping("/setRgstBarcoInfo")
	public void setRgstBarcoInfo(@RequestBody JSONObject param) throws Exception {

		rgstBarcoService.setRgstBarcoInfo(param);
	}

	/**
	 * 수입검사 요청 삭제
	 * 
	 * @param param
	 * @throws Exception
	 */
	@RequestMapping("/removeRgstBarcoInfo")
	public void removeRgstBarcoInfo(@RequestBody JSONObject param) throws Exception {

		rgstBarcoService.removeRgstBarcoInfo(param);
	}
}
